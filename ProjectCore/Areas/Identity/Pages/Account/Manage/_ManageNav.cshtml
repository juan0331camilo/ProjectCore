@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<div class="nav flex-column nav-fill" id="v-pills-tab" role="tablist" aria-orientation="vertical">
     <a class=" @ManageNavPages.IndexNavClass(ViewContext) nav-link" id="profile" asp-page="./Index">Profile</a>
  
    <a class=" @ManageNavPages.ChangePasswordNavClass(ViewContext) nav-link" id="change-password" asp-page="./ChangePassword">Password</a>
    @if (hasExternalLogins)
    {
       <a id="external-login" class=" @ManageNavPages.ExternalLoginsNavClass(ViewContext) nav-link" asp-page="./ExternalLogins">External logins</a>
    }
       <a class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) nav-link" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a>
     <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext) nav-link" id="personal-data" asp-page="./PersonalData">Personal data</a>
</div>
