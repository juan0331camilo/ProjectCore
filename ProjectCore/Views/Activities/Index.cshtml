@model IEnumerable<ProjectCore.DAL.Models.Activities>

@{
    ViewData["Title"] = "Index";
}

<h1>Activities</h1>

<p>
    

    @Html.ActionLink(" " , " Create" , " Activities" , null , new {@class = "btn btn-prymary fas fa-plus-circle" })
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>

                @Html.ActionLink(" ", "Edit", " Activities",new  {id = item.Id } , new { @class = "btn btn-prymary fas fa-edit" })
                @Html.ActionLink(" ", " Details", " Activities", new  {id = item.Id }, new { @class = "btn btn-prymary fas fa-info-circle" })
                @Html.ActionLink(" ", " Delete", " Activities", new  {id = item.Id }, new { @class = "btn btn-prymary fas fa-trash" })

                
            </td>
        </tr>
}
    </tbody>
</table>
