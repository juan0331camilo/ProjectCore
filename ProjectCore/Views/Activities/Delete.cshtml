@model ProjectCore.DAL.Models.Activities

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Activities</h1>

<h1 class="badge-danger">Are you sure you want to delete this?</h1>
<div>
    <h4>Activities</h4>
    <hr />
    <table class="table-bordered">
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.Active)
            </td>
        </tr>
        <tr>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </td>

            <td class="col-sm-10">
                @Html.DisplayFor(model => model.Active)
            </td>
        </tr>
    </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary ">

            <i class="fas fa-save"></i>
        </button>

        @Html.ActionLink(" ", "Index", " Activities", null, new { @class = "btn btn-prymary fas fa-undo-alt" })

    </form>
</div>
